# Application
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# Database
DATABASE_URL=postgresql://mainserver:mainserver_dev_password@localhost:5433/mainserver_dev

# Redis
REDIS_URL=redis://localhost:6380

# MongoDB (for gradual migration)
MONGO_URL=mongodb://mainserver:mainserver_dev_password@localhost:27018/mainserver_dev?authSource=admin

# Lark Configuration
LARK_APP_ID=your_lark_app_id
LARK_APP_SECRET=your_lark_app_secret
LARK_VERIFICATION_TOKEN=your_verification_token
LARK_ENCRYPT_KEY=your_encrypt_key

# AI Service
AI_SERVICE_URL=http://localhost:8000
AI_SERVICE_API_KEY=your_ai_service_api_key

# Security
JWT_SECRET=your_jwt_secret_key
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Queue Configuration
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6380
QUEUE_CONCURRENCY=5

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true