{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "baseUrl": "src",
        "paths": {
            "@/*": ["./*"],
            "@core/*": ["core/*"],
            "@api/*": ["api/*"],
            "@middleware/*": ["middleware/*"],
            "@utils/*": ["utils/*"],
            "@startup/*": ["startup/*"],
            "@types/*": ["types/*"],
            "@ormconfig": ["ormconfig"],
            "@infrastructure/*": ["infrastructure/*"],
            "@dal/*": ["infrastructure/dal/*"],
            "@entities": ["infrastructure/dal/entities"],
            "@entities/*": ["infrastructure/dal/entities/*"],
            "@repositories/*": ["infrastructure/dal/repositories/*"],
            "@cache/*": ["infrastructure/cache/*"],
            "@logger/*": ["infrastructure/logger/*"],
            "@http/*": ["infrastructure/http/*"],
            "@integrations/*": ["infrastructure/integrations/*"],
            "@crontab/*": ["infrastructure/crontab/*"],
            "@lark/*": ["infrastructure/integrations/lark/*"],
            "@lark-client": ["infrastructure/integrations/lark-client"],
            "@aliyun/*": ["infrastructure/integrations/aliyun/*"],
            "@volcengine/*": ["infrastructure/integrations/volcengine/*"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
