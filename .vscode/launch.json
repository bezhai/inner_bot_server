{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Koa TypeScript Debug",
        "runtimeArgs": [
          "-r",
          "ts-node/register"  // 使用 ts-node 直接运行 TypeScript
        ],
        "args": [
          "${workspaceFolder}/main-server/src/index.ts"  // 指向你的入口文件
        ],
        "sourceMaps": true,  // 支持断点映射
        "cwd": "${workspaceFolder}/main-server",  // 当前工作目录
        "outFiles": ["${workspaceFolder}/main-server/dist/**/*.js"],  // 指定编译后的 JS 文件路径
        "skipFiles": ["<node_internals>/**"],
        "env": {
          "NODE_ENV": "development"
        }
      }
    ]
  }