# =========================
# Staging 环境变量模板
#
# 初始化步骤：
#   1. cp infra/staging/.env.staging.example .env   # 然后填写凭据
#   2. cp infra/staging/.makerc.example .makerc      # 让 make 命令走 staging 路径
# =========================

# =========================================
# Main Server 必需
# =========================================

# PostgreSQL（POSTGRES_PORT 供 db-sync 使用，对应 staging 的 host 映射端口）
POSTGRES_HOST="postgres"
POSTGRES_PORT="5433"
POSTGRES_USER=""
POSTGRES_PASSWORD=""
POSTGRES_DB=""
SYNCHRONIZE_DB="false"

# MongoDB
MONGO_HOST="mongo"
MONGO_INITDB_ROOT_USERNAME=""
MONGO_INITDB_ROOT_PASSWORD=""

# Redis
REDIS_HOST="redis"
REDIS_PORT="6379"
REDIS_PASSWORD=""

# AI 服务（容器内部地址，不需要改端口）
AI_SERVER_HOST="ai-app"
AI_SERVER_PORT="8000"

# 外部服务
MEME_HOST="http://meme"
MEME_PORT="2233"

# 日志
LOG_LEVEL="info"
ENABLE_FILE_LOGGING="true"
LOG_DIR="/var/log/main-server"

# =========================================
# Main Server 可选
# =========================================
AI_PROVIDER_ADMIN_KEY=""
NEED_INIT="false"
IS_DEV="true"
PROXY_HTTP_SECRET=""
PROXY_HOST=""

# =========================================
# ai-service
# =========================================
SEARCH_API_KEY=""
DEPLOY_WEBHOOK_URL=""
ELASTIC_PASSWORD=""
QDRANT_SERVICE_API_KEY=""
QDRANT_SERVICE_HOST="qdrant"
QDRANT_SERVICE_PORT="6333"
BAIDU_TRANS_APIKEY=""
BANGUMI_ACCESS_TOKEN=""

INNER_HTTP_SECRET=""

# =========================================
# RabbitMQ
# =========================================
RABBITMQ_URL="amqp://admin:admin@rabbitmq:5672/"
RABBITMQ_USER="admin"
RABBITMQ_PASS="admin"
